
global
    log     /dev/log local0
    maxconn 2048
    user    haproxy
    group   haproxy
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option  redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000
    option  forwardfor
    option  http-server-close
    errorfile 400 /etc/haproxy/errors/400.http
    errorfile 403 /etc/haproxy/errors/403.http
    errorfile 408 /etc/haproxy/errors/408.http
    errorfile 500 /etc/haproxy/errors/500.http
    errorfile 502 /etc/haproxy/errors/502.http
    errorfile 503 /etc/haproxy/errors/503.http
    errorfile 504 /etc/haproxy/errors/504.http

frontend Randommallstudio.tech-http
        timeout client  30000
        bind 0:80
        http-request add-header X-Forwarded-Proto http
        default_backend Randommallstudio.tech_backend

frontend Randommallstudio.tech-https
        bind    0:443 ssl crt /etc/letsencrypt/live/www.randommallstudio.tech/www.randommallstudio.pem
        http-request add-header X-Forwarded-Proto https
        default_backend Randommallstudio.tech_backend

backend Randommallstudio.tech_backend
        balance  roundrobin
        server 218560-web-01 54.87.224.2:80 check
        server 218560-web-02 54.89.109.20:80 check
